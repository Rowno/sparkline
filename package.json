{
  "name": "@rowno/sparkline",
  "version": "4.0.0",
  "description": "Lightweight React sparklines âœ¨ ğŸ“ˆ",
  "author": "Roland Warmerdam (https://roland.codes)",
  "keywords": [
    "react",
    "sparkline"
  ],
  "repository": "Rowno/sparkline",
  "license": "ISC",
  "main": "commonjs/index.js",
  "module": "es6/index.js",
  "sideEffects": false,
  "files": [
    "commonjs",
    "es6"
  ],
  "scripts": {
    "test": "yarn build && xo && ava && size-limit",
    "dev": "start-storybook -p 9001 -c storybook",
    "clean": "rm -rf commonjs es6",
    "build-commonjs": "BABEL_ENV=commonjs babel src --out-dir commonjs --ignore './**/*.story.js,./**/*.test.js'",
    "build-es6": "BABEL_ENV=es6 babel src --out-dir es6 --ignore './**/*.story.js,./**/*.test.js'",
    "build": "yarn clean && yarn build-commonjs && yarn build-es6",
    "prepublishOnly": "yarn build"
  },
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "@babel/runtime": "^7.4.4",
    "d3-array": "^1.2.4",
    "d3-scale": "^2.2.2",
    "d3-shape": "^1.3.5",
    "prop-types": "^15.7.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.4",
    "@storybook/react": "^5.0.11",
    "ava": "^1.4.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.6",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.13.0",
    "eslint-config-xo-react": "^0.19.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6",
    "size-limit": "^1.3.2",
    "xo": "^0.24.0"
  },
  "peerDependencies": {
    "react": "^15.0.0 || ^16.0.0"
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": "xo-react",
    "space": true,
    "semicolon": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ]
  },
  "ava": {
    "require": [
      "@babel/register"
    ]
  },
  "size-limit": [
    {
      "path": "es6/index.js",
      "limit": "18 KB"
    }
  ]
}
